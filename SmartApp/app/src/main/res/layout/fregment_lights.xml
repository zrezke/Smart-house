<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">

    <Button
        android:id="@+id/garage_lights_on_btn"
        style="@android:style/Widget.Button"
        android:layout_width="298dp"
        android:layout_height="66dp"
        android:layout_marginTop="56dp"
        android:background="#00B6D6"
        android:onClick="turnGarageLightsOn"
        android:text="Garage lights on"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/garage_lights_off_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/house_lights_off_btn" />

    <Button
        android:id="@+id/garage_lights_off_btn"
        style="@android:style/Widget.Button"
        android:layout_width="298dp"
        android:layout_height="66dp"
        android:layout_marginTop="24dp"
        android:background="#FF7500"
        android:onClick="turnGarageLightsOff"
        android:text="Garage lights off"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/garage_lights_on_btn" />

    <Button
        android:id="@+id/house_lights_on_btn"
        style="@android:style/Widget.Button"
        android:layout_width="298dp"
        android:layout_height="66dp"
        android:layout_marginTop="40dp"
        android:background="#00B6D6"
        android:onClick="turnOnHouseLights"
        android:text="House Lights on"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/house_lights_off_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="132dp"
        android:layout_height="126dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/house_lights_off_btn"
        app:layout_constraintVertical_bias="0.911"
        app:srcCompat="@drawable/ic_light" />

    <Button
        android:id="@+id/house_lights_off_btn"
        style="@android:style/Widget.Button"
        android:layout_width="298dp"
        android:layout_height="66dp"
        android:layout_marginTop="24dp"
        android:background="#FF7500"
        android:onClick="turnOffHouseLights"
        android:text="House lights off"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/house_lights_on_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>